Options -MultiViews
AddDefaultCharset UTF-8
AddCharset UTF-8 .txt .xml .html .htm .css .js .json
RewriteEngine On

# Serve sitemap.xml dynamically via PHP (always fresh date)
RewriteRule ^sitemap\.xml$ /sitemap.php [L]

# Serve llms.txt via PHP to force UTF-8 charset header
RewriteRule ^llms\.txt$ /llms.php [L]

# SPA fallback â€” serve index.html for all non-file routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ /index.html [L]
